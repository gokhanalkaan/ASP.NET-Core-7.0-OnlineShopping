@using EntityLayer.Models;
@model Product

    <div class="card" style="min-width: 14rem; max-width:30rem;width:14rem; margin:3px; position:relative">
        <img style="height:150px;object-fit:contain;min-width:70%;"  src=@Model.ProductPhotoUrl class="card-img-top" alt="...">
        <div class="card-body">
        <h5 class="card-title">@Model.ProductName</h5>
        <p class="card-text">@Model.ProductTitle</p>
         <p class="card-text">$ @Model.ProductPrice</p>
        <a asp-controller="Product" asp-action="Index" asp-route-productId=@Model.Id class="btn btn-primary">Go to Product</a>
        </div>
        <div style="position:absolute;right:2px;top:0;">
            @await Component.InvokeAsync("_ProductPoint", Model.Id) 
       


        </div>

    </div>


